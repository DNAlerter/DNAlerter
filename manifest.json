{
  "manifest_version": 3,
  "name": "DNAlerter",
  "version": "1.0",
  "description": "Защита от рисков в публичных Wi-Fi: предупреждение при вводе пароля и блокировка сайтов с активной сессией",

  "permissions": [
    "cookies",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },

  "icons": { "128": "logo.png" },

  "web_accessible_resources": [
    {
      "resources": [
        "is_threat",
        "blockpage.html",
        "blockpage.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}